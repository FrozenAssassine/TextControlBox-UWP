{
  "Highlights": [
    {
      "Description": "php start",
      "Pattern": "\\<\\?php",
      "ColorDark": "#FF0000",
      "ColorLight": "#FF0000"
    },
    {
      "Description": "php end",
      "Pattern": "\\?\\>",
      "ColorDark": "#FF0000",
      "ColorLight": "#FF0000"
    },
    {
      "Description": "functions",
      "Pattern": "(?<!(def\\s))(?<=^|\\s|.)[a-zA-Z_][\\w_]*(?=\\()",
      "ColorDark": "#aa00FF",
      "ColorLight": "#3300FF"
    },
    {
      "Description": "keywords",
      "Pattern": "\\b(echo|if|case|while|else|switch|foreach|function|default|break|null|true|false)\\b",
      "ColorDark": "#0077FF",
      "ColorLight": "#0077FF"
    },

    {
      "Description": "-/+ floating numbers",
      "Pattern": "\\b([+-]?(?=\\.\\d|\\d)(?:\\d+)?(?:\\.?\\d*))(?:[eE]([+-]?\\d+))?\\b",
      "ColorDark": "#ff00ff",
      "ColorLight": "#ff00ff"
    },
    {
      "Description": "operators",
      "Pattern": "(\\+|\\-|\\*|/|%|\\=|\\:|\\!|>|\\<|\\?|&|\\||\\~|\\^)",
      "ColorDark": "#77FF77",
      "ColorLight": "#77FF77"
    },

    {
      "Description": "variables",
      "Pattern": "\\$\\w+",
      "ColorDark": "#FFBBFF",
      "ColorLight": "#440044"
    },
    {
      "Description": "strings",
      "Pattern": "\"[^\\n]*?\"",
      "ColorDark": "#00FF00",
      "ColorLight": "#ff5500"
    },
    {
      "Description": "strings",
      "Pattern": "\\'[^\\n]*?\\'",
      "ColorDark": "#00FF00",
      "ColorLight": "#ff5500"
    },
    {
      "Description": "regular expressions",
      "Pattern": "\"/[^\\n]*/i{0,1}\"",
      "ColorDark": "#00FF00",
      "ColorLight": "#ff5500"
    },
    {
      "Description": "multiline comments",
      "Pattern": "/\\*[^*]*\\*+(?:[^/*][^*]*\\*+)*/",
      "ColorDark": "#646464",
      "ColorLight": "#888888"
    },
    {
      "Description": "single line comment",
      "Pattern": "//(.*?)\\r?\\n",
      "ColorDark": "#646464",
      "ColorLight": "#888888"
    }
  ],
  "Name": "PHP",
  "Filter": "php",
  "Description": "Syntaxhighlighting for PHP language.",
  "Author": "Finn Freitag"
}